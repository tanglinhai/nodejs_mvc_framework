extends ../layout


block styles
  link(rel='stylesheet', href='/pc/css/users/info.css')
block scripts
  script(src='/pc/js/users/info.min.js')

block content
  table.table.table-striped.table-hover
    thead
      tr
        th index
        th username
        th name
        th cname
        th description
    tbody
      tr
        th= 1
        td= user.username
        td= user.name
        td= user.cname
        td= user.description
